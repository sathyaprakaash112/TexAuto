<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TexAuto</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TexAuto.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

    <style>
        html, body {
            height: 100%;
            margin: 0;
            background-color: #f5f7fa;
            color: #333;
            font-family: "Segoe UI", sans-serif;
        }

        .page-wrapper {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .main-content {
            flex: 1 0 auto;
            padding-top: 30px;
            padding-bottom: 60px;
        }

        .navbar {
            background-color: #1a3b5d;
            border-bottom: 1px solid #c0d3ef;
        }

        .navbar-brand,
        .nav-link {
            color: #ffffff !important;
            font-weight: 500;
        }

            .nav-link:hover {
                color: #cfe2ff !important;
            }

        .dropdown-menu {
            background-color: #ffffff;
            border: 1px solid #d0dce8;
            animation: fadeIn 0.2s ease-in-out;
        }

        .dropdown-item {
            color: #333;
            padding: 8px 16px;
            font-weight:bold;
        }

            .dropdown-item:hover {
                background-color: #f1f5fb;
            }

        .btn-sm {
            transition: transform 0.2s ease;
        }

            .btn-sm:hover {
                transform: scale(1.05);
            }

        footer.footer {
            background-color: #1a3b5d;
            color: #ffffff;
            padding: 20px 0;
        }

            footer.footer a {
                color: #ffffff;
                text-decoration: underline;
            }

                footer.footer a:hover {
                    color: #cfe2ff;
                }

        .dropdown-menu .btn-add {
            background-color: #1a3b5d;
            color: #fff;
            font-weight: bold;
            padding: 0 0.7rem;
            line-height: 1.2;
            border: none;
            border-radius: 6px;
            transition: background-color 0.2s ease;
        }

            .dropdown-menu .btn-add:hover {
                background-color: #0b5ed7;
            }

    </style>
</head>
<body>
    <div class="page-wrapper">
        <header>
            <nav class="navbar navbar-expand-sm navbar-dark shadow-sm">
                <div class="container-fluid">
                    <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">TexAuto</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="masterDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Master
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="masterDropdown">
                                    @foreach (var item in new[] {
                                    ("Departments", "Department"),
                                    ("Machines", "Machine"),
                                    ("Shift", "Shift"),
                                    ("MachineTypes", "Machine Types"),
                                    ("Products", "Products"),
                                    ("ProductTypes", "Product Types") })
                                    {
                                        <li class="d-flex align-items-center justify-content-between px-3 mt-2">
                                            <a class="dropdown-item p-0" asp-controller="@item.Item1" asp-action="Index">@item.Item2</a>
                                            <a class="btn btn-sm btn-add ms-2" asp-controller="@item.Item1" asp-action="Create">+</a>
                                        </li>
                                    }

                                </ul>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="productionsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Productions
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="productionsDropdown">
                                    <li><a class="dropdown-item" asp-controller="Productions" asp-action="Index">View All</a></li>
                                    <li><a class="dropdown-item" asp-controller="Productions" asp-action="Create">Create</a></li>
                                </ul>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#"  role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Bale Purchase
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="BalePurchases" asp-action="Index">View All</a></li>
                                    <li><a class="dropdown-item" asp-controller="BalePurchases" asp-action="Create">Create</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <main class="main-content">
            <div class="container">
                @RenderBody()
            </div>
        </main>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
