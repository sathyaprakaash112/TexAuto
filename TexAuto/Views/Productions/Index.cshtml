<div class="table-responsive">
    <table class="table table-bordered table-striped align-middle text-center">
        <thead class="table-light align-middle">
            <tr>
                <th style="min-width: 120px;">Production<br />Date</th>
                <th style="min-width: 100px;">Shift</th>
                <th>Bale</th>
                <th>Lap</th>
                <th>Del<br />Hank</th>
                <th>Efficiency</th>
                <th>Mixing</th>
                <th>Total</th>
                <th>Run<br />Time</th>
                <th>Idle<br />Time</th>
                <th>Doffs</th>
                <th>Cone<br />Wt</th>
                <th>Opening<br />(kg)</th>
                <th>Closing</th>
                <th>Breaks</th>
                <th>In</th>
                <th>Out</th>
                <th>Expected</th>
                <th>Drop</th>
                <th style="min-width: 140px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductionDate.ToString("dd-MM-yyyy")</td>
                    <td>@item.ShiftDetails</td>
                    <td>@item.Bale</td>
                    <td>@item.Lap</td>
                    <td>@item.DelHank</td>
                    <td>@item.ProductionEfficiency</td>
                    <td>@item.Mixing</td>
                    <td>@item.TotalProduction</td>
                    <td>@item.RunTime</td>
                    <td>@item.IdleTime</td>
                    <td>@item.NoOfDoffs</td>
                    <td>@item.ConeWeight</td>
                    <td>@item.OpeningKgs</td>
                    <td>@item.Closing</td>
                    <td>@item.SliverBreaks</td>
                    <td>@item.ProductIn</td>
                    <td>@item.ProductOut</td>
                    <td>@item.ExpectedProduction</td>
                    <td>@item.ProductionDrop</td>
                    <td>
                        <div class="btn-group btn-group-sm">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
