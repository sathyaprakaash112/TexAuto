@model TexAuto.Models.Domain.Entries.Production

@{
    ViewData["Title"] = "Delete Production";
}

<h1 class="text-danger mb-4">Delete Production</h1>

<h5>Are you sure you want to delete this record?</h5>

<div class="table-responsive mt-4">
    <table class="table table-striped">
        <tbody>
            @foreach (var prop in Model.GetType().GetProperties())
            {
                var label = prop.GetCustomAttributes(typeof(System.ComponentModel.DataAnnotations.DisplayAttribute), false)
                .Cast<System.ComponentModel.DataAnnotations.DisplayAttribute>()
                .FirstOrDefault()?.Name ?? prop.Name;

                <tr>
                    <th style="width: 30%">@label</th>
                    <td>@Html.DisplayFor(m => prop.GetValue(Model))</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<form asp-action="DeleteConfirmed" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>
