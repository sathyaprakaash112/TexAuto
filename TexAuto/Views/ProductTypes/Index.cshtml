@model IEnumerable<TexAuto.Models.Domain.Creation.ProductType>

@{
    ViewData["Title"] = "Product Types";
}

<h2 class="mb-4 text-dark">Product Types</h2>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary rounded-pill px-4">+ Create New</a>
</div>

<table class="table table-bordered table-striped table-hover shadow-sm bg-white">
    <thead class="table-light">
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Name)</th>
            <th>@Html.DisplayNameFor(model => model.First().Description)</th>
            <th>Department</th>
            <th>Tradable</th>
            <th style="width: 180px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Department?.Name</td>
                <td>
                    @if (item.Tradable)
                    {
                        <span class="badge bg-success">Yes</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">No</span>
                    }
                </td>
                <td>
                    <div class="d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary rounded-pill px-3">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary rounded-pill px-3">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger rounded-pill px-3">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
