@model TexAuto.Models.Domain.Entries.Shift

@{
    ViewData["Title"] = "Shift Details";

    var shiftMap = new List<(TimeOnly? Start, TimeOnly? End)>
    {
        (Model.StartTime1, Model.EndTime1),
        (Model.StartTime2, Model.EndTime2),
        (Model.StartTime3, Model.EndTime3),
        (Model.StartTime4, Model.EndTime4)
    };
}

<div class="container mt-4">
    <h2 class="text-black mb-3">Shift Details</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Effective Date</dt>
                <dd class="col-sm-9">@Model.EffectiveDate.ToString("dd MMM yyyy")</dd>

                <dt class="col-sm-3">Total Shifts</dt>
                <dd class="col-sm-9">@Model.TotalShifts</dd>

                @for (int i = 0; i < Model.TotalShifts && i < shiftMap.Count; i++)
                {
                    <dt class="col-sm-3">Start Time @(i + 1)</dt>
                    <dd class="col-sm-9">@shiftMap[i].Start?.ToString("hh:mm tt")</dd>

                    <dt class="col-sm-3">End Time @(i + 1)</dt>
                    <dd class="col-sm-9">@shiftMap[i].End?.ToString("hh:mm tt")</dd>
                }
            </dl>
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-between">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-primary">
            <i class="bi bi-pencil"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Back to List
        </a>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
}
